---
import CallToAction from './CallToAction.astro';
import Icon from './Icon.astro';
---

<aside>
	<h2>Want any further information?</h2>
	<CallToAction href="https://api.whatsapp.com/send?phone=5548991213223&text=Hello%20and%20welcome!%20Thank%20you%20for%20reaching%20out%20to%20me%20on%20WhatsApp.%20I'm%20excited%20to%20connect%20with%20you%20and%20have%20a%20nice%20chat.%20Please%20let%20me%20know%20how%20I%20can%20assist%20you,%20and%20I'll%20get%20back%20to%20you%20as%20soon%20as%20possible.">
		Send Me a Message!
		<Icon icon="whatsapp-logo" size="1.2em" />
	</CallToAction>
	
</aside>

<style>
	aside {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 3rem;
		border-top: 1px solid var(--gray-800);
		border-bottom: 1px solid var(--gray-800);
		padding: 5rem 1.5rem;
		background-color: var(--gray-999_40);
		box-shadow: var(--shadow-sm);
	}

	h2 {
		font-size: var(--text-xl);
		text-align: center;
		max-width: 15ch;
	}

	@media (min-width: 50em) {
		aside {
			padding: 7.5rem;
			flex-direction: row;
			flex-wrap: wrap;
			justify-content: space-between;
		}

		h2 {
			font-size: var(--text-3xl);
			text-align: left;
		}
	}
</style>
